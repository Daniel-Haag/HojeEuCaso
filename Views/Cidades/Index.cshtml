<body>
    <div class="container mt-4" style="margin-left:10%">
        <h2>Cidades</h2>
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <a href="/Cidades/Create" class="btn btn-primary btn-sm float-right" style="margin-left: 5%;">
                        <i class="fas fa-plus"></i> Novo
                    </a>
                    <table id="listagem" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Seleção</th>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var cidade in cidades)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selecao[]" value="@@cidade.ID">
                                        </td>
                                        <td>@@cidade.ID</td>
                                        <td>@@cidade.Nome</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</button>
                                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
