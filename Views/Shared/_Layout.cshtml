    <style>

        #loading {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            text-align: center;
            padding-top: 20%;
        }

        #sidebar-wrapper::-webkit-scrollbar {
            width: 10px; /* Largura da barra de rolagem */
            height: 10px;
        }

        #sidebar-wrapper::-webkit-scrollbar-track {
            background: #f1f1f1; /* Cor de fundo da área da barra de rolagem */
        }

        #sidebar-wrapper::-webkit-scrollbar-thumb {
            background: #888; /* Cor do "ponteiro" da barra de rolagem */
        }

            #sidebar-wrapper::-webkit-scrollbar-thumb:hover {
                background: #555; /* Cor do "ponteiro" da barra de rolagem quando hover */
            }


        .menu-toggle {
            /* Estilos comuns para o elemento de alternância do menu */
            text-indent: 20px;
            line-height: 40px;
            color: #999999;
            cursor: pointer; /* Adicionar um cursor ao elemento de alternância */
        }

            .menu-toggle:hover {
                /* Estilos de hover para o elemento de alternância do menu */
                color: #fff;
                background: #312A25;
            }

        .nav-link {
            /* Estilos adicionais para o elemento de alternância do menu com a classe "nav-link" */
            /* Adicionar estilos específicos, se necessário */
        }



        /* Ocultar as subseleções por padrão */
        .sub-menu {
            display: none;
        }

        .sub-menu-option {
            font-size: 10px;
            padding-left: 0 !important;
            margin-left: 0 !important;
            list-style-type: none !important;
        }

        /* Estilizar as subseleções */
        .sub-menu.expanded {
            display: block;
        }

        body {
            overflow-x: hidden;
        }

        .logoWeb {
            margin-top: 25px;
            margin-left: 60px;
        }

        #wrapper {
            padding-left: 0;
            -webkit-transition: all 0.6s ease;
            -moz-transition: all 0.6s ease;
            -o-transition: all 0.6s ease;
            transition: all 0.6s ease;
        }

            #wrapper.toggled {
                padding-left: 200px;
            }

        #sidebar-wrapper {
            z-index: 1000;
            position: fixed;
            left: 250px;
            width: 185px;
            height: 100%;
            margin-left: -250px;
            overflow-y: auto;
            background-color: lightgray !Important;
            -webkit-transition: all 0.5s ease;
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

        #wrapper.toggled #sidebar-wrapper {
            width: 50px;
        }



        #wrapper.toggled #page-content-wrapper {
            position: absolute;
            margin-left: -250px;
        }

        /* Sidebar Styles */

        .sidebar-nav {
            position: absolute;
            top: 0;
            right: 8px;
            width: 200px;
            margin: 0;
            padding: 0;
            font-size: 12px;
        }

            .sidebar-nav li {
                text-indent: 20px;
                line-height: 40px;
            }

                .sidebar-nav li a {
                    display: block;
                    text-decoration: none;
                    color: #999999;
                }

                    .sidebar-nav li a:hover {
                        text-decoration: none;
                        color: #fff;
                    }

                    .sidebar-nav li a:active,
                    .sidebar-nav li a:focus {
                        text-decoration: none;
                    }

            .sidebar-nav > .sidebar-brand {
                height: 65px;
                font-size: 18px;
                line-height: 60px;
            }

                .sidebar-nav > .sidebar-brand a {
                    color: #999999;
                }

                    .sidebar-nav > .sidebar-brand a:hover {
                        color: #fff;
                        background: none;
                    }

        @@media(min-width:768px) {
            #wrapper.toggled {
                padding-left: 0;
            }

            #sidebar-wrapper {
                width: 230px;
            }

            #wrapper.toggled #sidebar-wrapper {
                width: 40px;
            }

            .logoMobile {
                margin-top: 25px;
                margin-left: -15px;
            }

            #wrapper.toggled span {
                visibility: hidden;
            }

            #wrapper.toggled i {
                float: right;
            }

            #page-content-wrapper {
                padding: 20px;
                position: relative;
            }

            #wrapper.toggled #page-content-wrapper {
                position: relative;
                margin-right: 0;
            }
        }


        @@media(max-width:414px) {

            #wrapper.toggled #page-content-wrapper {
                position: absolute;
                margin-right: 60px;
            }

            #wrapper.toggled {
                padding-right: 60px;
            }

            #wrapper {
                padding-left: 20px;
            }

                #wrapper.toggled {
                    padding-left: 0;
                }

            #sidebar-wrapper {
                width: 50px;
            }

            #wrapper.toggled #sidebar-wrapper {
                width: 140px;
            }

            #wrapper.toggled span {
                visibility: visible;
                position: relative;
                left: 70px;
                bottom: 13px;
            }

            #wrapper span {
                visibility: hidden;
            }

            #wrapper.toggled i {
                float: right;
            }

            #wrapper i {
                float: right;
            }

            #page-content-wrapper {
                padding: 5px;
                position: relative;
            }

            #wrapper.toggled #page-content-wrapper {
                position: relative;
                margin-right: 0;
            }
        }

        /* Estilo do sidebar-wrapper */
        #sidebar-wrapper {
            background-color: #fff; /* Cor de fundo do menu */
            border-right: 1px solid #ddd; /* Borda à direita */
        }

        /* Estilo itens de menu */
        .sidebar-nav li {
            text-indent: 20px;
            line-height: 40px;
        }

            .sidebar-nav li a {
                color: black; /* Cor dos links */
                text-decoration: none;
                transition: color 0.5s ease; /* Transição de cor ao passar o mouse */
            }

                .sidebar-nav li a:hover {
                    color: red /* Cor ao passar o mouse sobre os links */
                }

        /* Estilo ícone de alternância do menu quando as subseleções estão expandidas */
        #nova-site-toggle i.fa {
            transition: transform 0.3s;
        }

        #nova-site-toggle.expanded i.fa {
            transform: rotate(90deg);
        }
    </style>
</head>
