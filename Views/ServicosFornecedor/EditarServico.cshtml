@using HojeEuCaso.Dtos
@model PacoteComItensDoPacoteDto

@{
    ViewData["Title"] = "Editar Serviço";
}
<style>

    input[type=checkbox] {
        accent-color: red;
    }

    fade-in-out {
        animation: fadeInOut 3s ease-in-out;
    }

    @@keyframes fadeInOut {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }

    .error-fade-in-out {
        animation: errorFadeInOut 3s ease-in-out;
    }

    @@keyframes errorFadeInOut {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }
</style>
<h5 style="margin-left: 11%">@ViewData["Title"]</h5>
<hr />
<div class="container" style="margin-left: 7%">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">

                    <h5>Editar Serviço</h5>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-action="EditarServico" enctype="multipart/form-data">
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="PacoteID">ID</label>
                                    <input asp-for="PacoteID" class="form-control" value="@ViewBag.PacoteAtual.PacoteID" />
                                    <span asp-validation-for="PacoteID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CaminhoFoto">CaminhoFoto</label>
                                    <input asp-for="CaminhoFoto" class="form-control" value="@ViewBag.CaminhoImagem" />
                                    <span asp-validation-for="CaminhoFoto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CaminhoVideo">CaminhoVideo</label>
                                    <input asp-for="CaminhoVideo" class="form-control" value="@ViewBag.CaminhoVideo" />
                                    <span asp-validation-for="CaminhoVideo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CategoriaID">CategoriaID</label>
                                    <input asp-for="CategoriaID" class="form-control" value="@ViewBag.PacoteAtual.CategoriaID" />
                                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Titulo">Titulo</label>
                                    <select asp-for="Titulo" class="form-control">
                                        @foreach (var pacote in ViewBag.Pacotes)
                                        {
                                            var isSelected = pacote.Titulo == ViewBag.PacoteAtual.Titulo ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@pacote.Titulo" selected>
                                                    @pacote.Titulo
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@pacote.Titulo">
                                                    @pacote.Titulo
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Subtitulo">Subtítulo</label>
                                    <input asp-for="Subtitulo" class="form-control" value="@ViewBag.PacoteAtual.SubTitulo" />
                                    <span asp-validation-for="Subtitulo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="QtdMaximaEventosDia">Quantidade máxima deste evento por dia</label>
                                    <input asp-for="QtdMaximaEventosDia" class="form-control" value="@ViewBag.PacoteAtual.QtdMaximaEventosDia" />
                                    <span asp-validation-for="QtdMaximaEventosDia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="QtdMaximaPessoas">Número de convidados</label>
                                    <input asp-for="QtdMaximaPessoas" class="form-control" value="@ViewBag.PacoteAtual.QtdMaximaPessoas" />
                                    <span asp-validation-for="QtdMaximaPessoas" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Pais.PaisID">Pais</label>
                                    <select asp-for="Pais.PaisID" class="form-control">
                                        @foreach (var pais in ViewBag.Paises)
                                        {
                                            var isSelected = pais.PaisID == ViewBag.Pais?.PaisID ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@pais.PaisID" selected>
                                                    @pais.Nome
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@pais.PaisID">
                                                    @pais.Nome
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Pais.PaisID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="EstadoID">Estado</label>
                                    <select asp-for="EstadoID" class="form-control">
                                        @foreach (var estado in ViewBag.Estados)
                                        {
                                            var isSelected = estado.EstadoID == ViewBag.Estado.EstadoID ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@estado.EstadoID" selected>
                                                    @estado.Nome
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@estado.EstadoID">
                                                    @estado.Nome
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="EstadoID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="CidadeID">Cidade</label>
                                    <select asp-for="CidadeID" class="form-control">
                                        @foreach (var cidade in ViewBag.Cidades)
                                        {
                                            var isSelected = cidade.CidadeID == ViewBag.Cidade.CidadeID ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@cidade.CidadeID" selected>
                                                    @cidade.Nome
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@cidade.CidadeID">
                                                    @cidade.Nome
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CidadeID" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ativo">Ativo</label>
                            <div>
                                <input type="checkbox" asp-for="Ativo" checked="ViewBag.PacoteAtual.Ativo" />
                                <span asp-validation-for="Ativo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="greyFontStyle">Itens</span>
                        </div>

                        <div class="itens-container">
                            <!-- Conteúdo dos pares de inputs será adicionado aqui -->
                        </div>
                        <hr />
                        <div class="form-group">
                            <a href="javascript:void(0)" style="color:red" onclick="adicionarItem()"><i class="fa fa-plus-circle" style="margin-right:5px" aria-hidden="true"></i><span class="greyFontStyle">Adicionar</span></a>
                        </div>

                        <div class="card shadow" style="margin-top:10px">
                            <div class="card-body">
                                <h5>Fotos e Vídeos</h5>

                                <div class="form-group">
                                    <label for="Foto" class="btn btn-outline-danger mb-2">
                                        Alterar Foto
                                        <input type="file" asp-for="Fotos" style="display: none;" id="Foto" onchange="fileSelected('Foto')">
                                    </label>

                                    <label for="Video" class="btn btn-outline-danger mb-2">
                                        Alterar Vídeo
                                        <input type="file" asp-for="Video" style="display: none;" id="Video" onchange="fileSelected('Video')">
                                    </label>

                                    <br />
                                    <span id="FotoSelected" style="display: none; font-size:10px">Foto: <span id="FotoFileName" style="font-size:10px"></span></span>
                                    <span asp-validation-for="Fotos" class="text-danger" style="font-size:10px"></span>
                                    <br />
                                    <span id="VideoSelected" style="display: none; font-size:10px">Vídeo: <span id="VideoFileName" style="font-size:10px"></span></span>
                                    <span asp-validation-for="Video" class="text-danger" style="font-size:10px"></span>
                                </div>

                                <div class="form-group" id="visualizacaoFoto">
                                    <label for="existingFoto">Foto:</label>
                                    @if (!string.IsNullOrEmpty(ViewBag.FotoExistente))
                                    {
                                        <img src="@Url.Content(ViewBag.FotoExistente)" alt="Imagens Serviço" class="d-block w-100" />
                                    }
                                </div>

                                <div class="form-group" id="visualizacaoVideo">
                                    <label for="existingVideo">Vídeo:</label>
                                    @if (!string.IsNullOrEmpty(ViewBag.VideoExistente))
                                    {
                                        <div class="d-flex justify-content-center">
                                            <video class="d-block w-100" controls>
                                                <source src="@Url.Content(ViewBag.VideoExistente)" type="video/mp4">
                                                Seu navegador não suporta o elemento de vídeo.
                                            </video>
                                        </div>
                                    }
                                </div>

                                <span class="greyFontStyle">Vídeo de no máximo 10MB</span>
                            </div>
                        </div>

                        <div class="card shadow" style="margin-top:10px">
                            <div class="card-body">
                                <h5>Informações sobre valores</h5>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Preco">Preço</label>
                                            <span class="greyFontStyle">(Não visível para o usuário)</span>
                                            <input asp-for="Preco" class="form-control" id="inputPrecoServico" oninput="RetiraPonto('inputPrecoServico')" value="@string.Format("{0:F2}",ViewBag.PacoteAtual.Preco)" />
                                            <span asp-validation-for="Preco" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="ReajusteAnualPorcentagem">Reajuste anual (Em %)</label>
                                            <input asp-for="ReajusteAnualPorcentagem" class="form-control" value="@((int)ViewBag.PacoteAtual.ReajusteAnualPorcentagem)" />
                                            <span asp-validation-for="ReajusteAnualPorcentagem" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <span class="greyFontStyle">Descontos por dia (Em %)</span>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoSegundaFeira">Segunda Feira</label>
                                            <input asp-for="DescontoSegundaFeira" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoSegundaFeira)" />
                                            <span asp-validation-for="DescontoSegundaFeira" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoTercaFeira">Terça Feira</label>
                                            <input asp-for="DescontoTercaFeira" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoTercaFeira)" />
                                            <span asp-validation-for="DescontoTercaFeira" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoQuartaFeira">Quarta Feira</label>
                                            <input asp-for="DescontoQuartaFeira" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoQuartaFeira)" />
                                            <span asp-validation-for="DescontoQuartaFeira" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoQuintaFeira">Quinta Feira</label>
                                            <input asp-for="DescontoQuintaFeira" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoQuintaFeira)" />
                                            <span asp-validation-for="DescontoQuintaFeira" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoSextaFeira">Sexta Feira</label>
                                            <input asp-for="DescontoSextaFeira" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoSextaFeira)" />
                                            <span asp-validation-for="DescontoSextaFeira" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoSabado">Sábado</label>
                                            <input asp-for="DescontoSabado" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoSabado)" />
                                            <span asp-validation-for="DescontoSabado" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="DescontoDomingo">Domingo</label>
                                            <input asp-for="DescontoDomingo" class="form-control" value="@((int)ViewBag.PacoteAtual.DescontoDomingo)" />
                                            <span asp-validation-for="DescontoDomingo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            </div>
                        </div>
                        <div style="margin-top:10px">
                            <button type="submit" class="btn btn-danger">Salvar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

    @if (ViewBag.ItensDePacotes != null)
    {
        for (var i = 0; i < ViewBag.ItensDePacotes.Count; i++)
        {
            var itemID = @Html.Raw(Json.Serialize(ViewBag.ItensDePacotes[i].ItensDePacotesID));
            var descricao = @Html.Raw(Json.Serialize(ViewBag.ItensDePacotes[i].Descricao));
            var quantidade = @Html.Raw(Json.Serialize(ViewBag.ItensDePacotes[i].Quantidade));
            <text>
                    adicionarItem('@itemID', '@descricao', @quantidade);
            </text>
        }
    }
                // Verifica se há uma mensagem de sucesso
                var successMessage = $(".alert.alert-success");

        // Se houver uma mensagem de sucesso, iniciar a animação de fade-in e depois fade-out
        if (successMessage.length > 0) {
            successMessage.addClass("fade-in-out");
            setTimeout(function () {
                successMessage.removeClass("fade-in-out").fadeOut(500);
            }, 3000); // 3000 milissegundos (3 segundos)
        }

        // Verifica se há uma mensagem de erro
        var errorMessage = $(".alert.alert-danger");

        // Se houver uma mensagem de erro, iniciar a animação de fade-in e depois fade-out
        if (errorMessage.length > 0) {
            errorMessage.addClass("error-fade-in-out");
            setTimeout(function () {
                errorMessage.removeClass("error-fade-in-out").fadeOut(500);
            }, 3000); // 3000 milissegundos (3 segundos)
        }
    });

    function fileSelected(inputId) {
        const fileInput = document.getElementById(inputId);
        const fileNameSpan = document.getElementById(inputId + 'FileName');
        const selectedSpan = document.getElementById(inputId + 'Selected');

        console.log(typeof (inputId));

        if (inputId == 'Foto') {

            var visualizacaoFoto = document.getElementById('visualizacaoFoto');
            visualizacaoFoto.style.display = 'none';
        }

        if (inputId == 'Video') {
            var visualizacaoVideo = document.getElementById('visualizacaoVideo');
            visualizacaoVideo.style.display = 'none';
        }

        if (fileInput.files.length > 0) {
            fileNameSpan.innerText = fileInput.files[0].name;
            selectedSpan.style.display = 'inline';
        } else {
            fileNameSpan.innerText = '';
            selectedSpan.style.display = 'none';
        }
    }

    var itemCount = @(ViewBag.ItensDePacotes.Count - 1);

    function adicionarItem(ID, descricao, quantidade) {
        var itensContainer = document.querySelector('.itens-container');

        var itemRows = document.querySelectorAll('.item-row');
        itemCount = itemRows.length; // Atualiza o contador de itens

        var div = document.createElement("div");
        div.classList.add("item-row");

        var descricaoLabel = document.createElement("label");
        descricaoLabel.innerText = "Descrição do Item:";
        div.appendChild(descricaoLabel);

        var IDInput = document.createElement("input");
        IDInput.type = "text";
        IDInput.name = `ItensDePacotes[${itemCount}].ItensDePacotesID`;
        IDInput.classList.add("form-control");
        IDInput.value = ID === undefined ? "" : ID.replace(/"/g, "");
        div.appendChild(IDInput);
        IDInput.style.display = 'none';

        var descricaoInput = document.createElement("input");
        descricaoInput.type = "text";
        descricaoInput.name = `ItensDePacotes[${itemCount}].Descricao`;
        descricaoInput.classList.add("form-control");
        descricaoInput.value = descricao === undefined ? "" : descricao.replace(/"/g, "");
        div.appendChild(descricaoInput);

        var quantidadeLabel = document.createElement("label");
        quantidadeLabel.innerText = "Quantidade do Item:";
        div.appendChild(quantidadeLabel);

        var quantidadeInput = document.createElement("input");
        quantidadeInput.type = "number";
        quantidadeInput.name = `ItensDePacotes[${itemCount}].Quantidade`;
        quantidadeInput.classList.add("form-control");
        quantidadeInput.value = quantidade;
        div.appendChild(quantidadeInput);

        var removerBotao = document.createElement("a");
        removerBotao.href = "javascript:void(0)";
        removerBotao.style.color = "red";
        removerBotao.innerHTML = "<i class='fa fa-minus-circle' style='margin-right:5px' aria-hidden='true'></i><span class='greyFontStyle'>Remover</span>";
        removerBotao.onclick = function () {
            removerItem(div);
        };
        div.appendChild(removerBotao);

        itensContainer.appendChild(div);
    }

    function removerItem(item) {
        var itensContainer = document.querySelector('.itens-container');
        itensContainer.removeChild(item);
    }

</script>
