    {
        for (var i = 0; i < ViewBag.ItensDePacotes.Count; i++)
        {
            var itemID = @Html.Raw(Json.Serialize(ViewBag.ItensDePacotes[i].ItensDePacotesID));
            var descricao = @Html.Raw(Json.Serialize(ViewBag.ItensDePacotes[i].Descricao));
