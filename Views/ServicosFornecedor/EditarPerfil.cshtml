                                <div class="form-group">
                                    <label asp-for="CaminhoFoto">CaminhoFoto</label>
                                    <input asp-for="CaminhoFoto" class="form-control" value="@ViewBag.Fornecedor.CaminhoFoto" />
                                    <span asp-validation-for="CaminhoFoto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CategoriaID">CategoriaID</label>
                                    <input asp-for="CategoriaID" class="form-control" value="@ViewBag.Fornecedor.CategoriaID" />
                                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
