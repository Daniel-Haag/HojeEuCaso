        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5>Geral</h5>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-action="EditarPerfil" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col d-flex flex-column">
                                <div id="visualizacaoFoto">
                                    @if (!string.IsNullOrEmpty(ViewBag.FotoExistente))
                                    {
                                        <img src="@Url.Content(ViewBag.FotoExistente)" alt="Foto Fornecedor" class="d-block w-50 center-image" style="margin-left:25%" />
                                    }
                                </div>
                                <span id="FotoSelected" style="display: none; font-size:10px;"><span style="font-weight: bold">Foto Selecionada:</span> <span id="FotoFileName" style="font-size:10px"></span></span>
                                <span asp-validation-for="Foto" class="text-danger" style="font-size:10px"></span>
