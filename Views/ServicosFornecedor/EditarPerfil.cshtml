@model Fornecedor

@{
    ViewData["Title"] = "Editar Perfil";
}
<style>

    input[type=checkbox] {
        accent-color: red;
    }

    fade-in-out {
        animation: fadeInOut 3s ease-in-out;
    }

    @@keyframes fadeInOut {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }

    .error-fade-in-out {
        animation: errorFadeInOut 3s ease-in-out;
    }

    @@keyframes errorFadeInOut {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }
</style>
<h5 style="margin-left: 11%">@ViewData["Title"]</h5>
<hr />
<div class="container" style="margin-left: 7%">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5>Geral</h5>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-action="EditarPerfil" enctype="multipart/form-data">
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="FornecedorID">ID</label>
                                    <input asp-for="FornecedorID" class="form-control" value="@ViewBag.Fornecedor.FornecedorID" />
                                    <span asp-validation-for="FornecedorID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CaminhoFoto">CaminhoFoto</label>
                                    <input asp-for="CaminhoFoto" class="form-control" value="@ViewBag.Fornecedor.CaminhoFoto" />
                                    <span asp-validation-for="CaminhoFoto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CategoriaID">CategoriaID</label>
                                    <input asp-for="CategoriaID" class="form-control" value="@ViewBag.Fornecedor.CategoriaID" />
                                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Nome">Nome</label>
                                    <input asp-for="Nome" class="form-control" value="@ViewBag.Fornecedor.Nome" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    <input asp-for="Email" class="form-control" value="@ViewBag.Fornecedor.Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Senha">Alterar Senha</label>
                                    <input type="password" asp-for="Senha" class="form-control" value="@ViewBag.Fornecedor.Senha" />
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label style="font-size:12px" id="confirmacaoSenha">Confirmar Alteração de Senha</label>
                                    <input type="password" class="form-control" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="RG">RG</label>
                                    <input asp-for="RG" class="form-control" value="@ViewBag.Fornecedor.RG" />
                                    <span asp-validation-for="RG" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="CPF">CPF</label>
                                    <input asp-for="CPF" class="form-control" value="@ViewBag.Fornecedor.CPF" />
                                    <span asp-validation-for="CPF" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Telefone">Telefone</label>
                                    <input asp-for="Telefone" class="form-control" value="@ViewBag.Fornecedor.Telefone" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="NomeFantasia">Nome Fantasia</label>
                                    <input asp-for="NomeFantasia" class="form-control" value="@ViewBag.Fornecedor.NomeFantasia" />
                                    <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="CEP">CEP</label>
                                    <input asp-for="CEP" class="form-control" value="@ViewBag.Fornecedor.CEP" />
                                    <span asp-validation-for="CEP" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="EstadoID">Estado</label>
                                    <select asp-for="EstadoID" class="form-control">
                                        @foreach (var estado in ViewBag.Estados)
                                        {
                                            var isSelected = estado.EstadoID == ViewBag.Estado.EstadoID ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@estado.EstadoID" selected>
                                                    @estado.Nome
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@estado.EstadoID">
                                                    @estado.Nome
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="EstadoID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="CidadeID">Cidade</label>
                                    <select asp-for="CidadeID" class="form-control">
                                        @foreach (var cidade in ViewBag.Cidades)
                                        {
                                            var isSelected = cidade.CidadeID == ViewBag.Cidade.CidadeID ? "selected" : "";

                                            if (isSelected == "selected")
                                            {
                                                <option value="@cidade.CidadeID" selected>
                                                    @cidade.Nome
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@cidade.CidadeID">
                                                    @cidade.Nome
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CidadeID" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Bairro">Bairro</label>
                                    <input asp-for="Bairro" class="form-control" value="@ViewBag.Fornecedor.Bairro" />
                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Endereco">Endereço</label>
                                    <input asp-for="Endereco" class="form-control" value="@ViewBag.Fornecedor.Endereco" />
                                    <span asp-validation-for="Endereco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Facebook">Facebook</label>
                                    <input asp-for="Facebook" class="form-control" value="@ViewBag.Fornecedor.Facebook" />
                                    <span asp-validation-for="Facebook" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Instagram">Instagram</label>
                                    <input asp-for="Instagram" class="form-control" value="@ViewBag.Fornecedor.Instagram" />
                                    <span asp-validation-for="Instagram" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label style="font-size:12px" asp-for="Site">Site</label>
                                    <input asp-for="Site" class="form-control" value="@ViewBag.Fornecedor.Site" />
                                    <span asp-validation-for="Site" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                       @* <div class="form-group">
                            <label asp-for="Ativo">Ativo</label>
                            <div>
                                <input type="checkbox" asp-for="Ativo" checked="ViewBag.PacoteAtual.Ativo" />
                                <span asp-validation-for="Ativo" class="text-danger"></span>
                            </div>
                        </div>*@
                        <div class="form-group">
                            <span class="greyFontStyle">Itens</span>
                        </div>

                        <div class="itens-container">
                            <!-- Conteúdo dos pares de inputs será adicionado aqui -->
                        </div>
                        <hr />
                        <div class="form-group">
                            <a href="javascript:void(0)" style="color:red" onclick="adicionarItem()"><i class="fa fa-plus-circle" style="margin-right:5px" aria-hidden="true"></i><span class="greyFontStyle">Adicionar</span></a>
                        </div>

                        <div class="card shadow" style="margin-top:10px">
                            <div class="card-body">
                                <h5>Fotos e Vídeos</h5>

                               @* <div class="form-group">
                                    <label for="Foto" class="btn btn-outline-danger mb-2">
                                        Alterar Foto
                                        <input type="file" asp-for="Foto" style="display: none;" id="Foto" onchange="fileSelected('Foto')">
                                    </label>

                                    <span id="FotoSelected" style="display: none; font-size:10px">Foto: <span id="FotoFileName" style="font-size:10px"></span></span>
                                    <span asp-validation-for="Foto" class="text-danger" style="font-size:10px"></span>
                                </div>*@

                                <div class="form-group" id="visualizacaoFoto">
                                    <label for="existingFoto">Foto:</label>
                                    @if (!string.IsNullOrEmpty(ViewBag.FotoExistente))
                                    {
                                        <img src="@Url.Content(ViewBag.FotoExistente)" alt="Imagens Serviço" class="d-block w-100" />
                                    }
                                </div>

                                <div class="form-group" id="visualizacaoVideo">
                                    <label for="existingVideo">Vídeo:</label>
                                    @if (!string.IsNullOrEmpty(ViewBag.VideoExistente))
                                    {
                                        <div class="d-flex justify-content-center">
                                            <video class="d-block w-100" controls>
                                                <source src="@Url.Content(ViewBag.VideoExistente)" type="video/mp4">
                                                Seu navegador não suporta o elemento de vídeo.
                                            </video>
                                        </div>
                                    }
                                </div>

                                <span class="greyFontStyle">Vídeo de no máximo 10MB</span>
                            </div>
                        </div>


                        <div style="margin-top:10px">
                            <button type="submit" class="btn btn-danger">Salvar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        // Verifica se há uma mensagem de sucesso
        var successMessage = $(".alert.alert-success");

        // Se houver uma mensagem de sucesso, iniciar a animação de fade-in e depois fade-out
        if (successMessage.length > 0) {
            successMessage.addClass("fade-in-out");
            setTimeout(function () {
                successMessage.removeClass("fade-in-out").fadeOut(500);
            }, 3000); // 3000 milissegundos (3 segundos)
        }

        // Verifica se há uma mensagem de erro
        var errorMessage = $(".alert.alert-danger");

        // Se houver uma mensagem de erro, iniciar a animação de fade-in e depois fade-out
        if (errorMessage.length > 0) {
            errorMessage.addClass("error-fade-in-out");
            setTimeout(function () {
                errorMessage.removeClass("error-fade-in-out").fadeOut(500);
            }, 3000); // 3000 milissegundos (3 segundos)
        }
    });

    function fileSelected(inputId) {
        const fileInput = document.getElementById(inputId);
        const fileNameSpan = document.getElementById(inputId + 'FileName');
        const selectedSpan = document.getElementById(inputId + 'Selected');

        if (inputId == 'Foto') {

            var visualizacaoFoto = document.getElementById('visualizacaoFoto');
            visualizacaoFoto.style.display = 'none';
        }

        if (fileInput.files.length > 0) {
            fileNameSpan.innerText = fileInput.files[0].name;
            selectedSpan.style.display = 'inline';
        } else {
            fileNameSpan.innerText = '';
            selectedSpan.style.display = 'none';
        }
    }

</script>
