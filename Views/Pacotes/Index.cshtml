<!DOCTYPE html>
<html>
<head>
    <title>Pacotes</title>
</head>
<body>
    <div class="container mt-4" style="margin-left:10%">
        <h2>Pacotes</h2>
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <a href="/Pacotes/Create" class="btn btn-primary btn-sm float-right" style="margin-left: 5%;">
                        <i class="fas fa-plus"></i> Novo
                    </a>
                    <table id="listagem" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Seleção</th>
                                <th>ID</th>
                                <th>Título</th>
                                <th>Preço</th>
                                <th>Quantidade Máxima de Eventos por dia</th>
                                <th>Quantidade Máxima de Pessoas</th>
                                <th>DefaultCategory</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var pacote in pacotes)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selecao[]" value="@@pacote.ID">
                                        </td>
                                        <td>@@categoria.ID</td>
                                        <td>@@categoria.Titulo</td>
                                        <td>@@categoria.Preco</td>
                                        <td>@@categoria.QtdMaximaEventosDia</td>
                                        <td>@@categoria.QtdMaximaPessoas</td>
                                        <td>@@categoria.DefaultCategory</td>
                                        <td>
                                            <a href="/Pacotes/Edit/1" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <button class="btn btn-danger btn-sm delete-button" data-pacote-id="1">
                                                <i class="fas fa-trash"></i> Excluir
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="confirmDeleteModal" tabindex="-1" role="dialog" style="width:80%; margin-left:10%">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Exclusão</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Tem certeza de que deseja excluir este registro?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    var table = new DataTable('#listagem', {
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json',
        },
    });

    $(document).ready(function () {
        $(".delete-button").click(function () {
            var pacote = $(this).data("pacote-id");

            $("#confirmDelete").data("pacote-id", pacote);
            $("#confirmDeleteModal").modal("show");
        });

        $("#confirmDelete").click(function () {
            var pacoteId = $(this).data("pacote-id");

            // Envia uma solicitação AJAX para excluir o registro com o ID da cláusula
            $.ajax({
                type: 'POST',
                url: '/Pacotes/Delete/' + pacoteId, // Verifique se o URL corresponde à sua rota de exclusão
                success: function (response) {
                    // Lida com a resposta do servidor, por exemplo, atualiza a tabela de cláusulas
                    // Recarrega a página ou atualiza a tabela de cláusulas de alguma forma
                    // Usar o DataTables para atualizar a tabela após a exclusão bem-sucedida
                    table.ajax.reload(); // Isso atualiza a tabela usando DataTables

                    // Fecha o modal
                    $("#confirmDeleteModal").modal("hide");
                },
                error: function (error) {
                    console.error(error);
                }
            });
        });
    });
</script>







